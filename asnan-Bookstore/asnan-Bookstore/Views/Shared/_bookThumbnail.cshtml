@model BookModel
    <div class="card mb-4">
        <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/No_Image_Available.jpg" : Model.CoverImageUrl)"class="card-img-top" alt="..." height="350">
        <div class="card-body">
            <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)</h5>
            <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not available" : Model.Description)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                </div>
                <small>@(string.IsNullOrEmpty(Model.Author) ? "NA is not available" : Model.Author)</small>
            </div>
        </div>
    </div>

